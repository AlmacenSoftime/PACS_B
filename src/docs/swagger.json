{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "PACS API",
    "description": "API para el sistema PACS de Softime"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Autenticación",
      "description": "Métodos para el manejo de la seguridad en la aplicación"
    },
    {
      "name": "Roles",
      "description": "Métodos para el manejo de roles"
    },
    {
      "name": "Lista",
      "description": "Métodos relacionados a la tabla principal de la aplicación"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "securityDefinitions": {
    "apiKeyAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "Auth-Token",
      "description": "Token JWT"
    }
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/authentication/login": {
      "post": {
        "description": "Método de login al sistema",
        "tags": [
          "Autenticación"
        ],
        "parameters": [
          {
            "$ref": "#/definitions/loginRequest"
          }
        ],
        "responses": {
          "200": {
            "description": "Responde con token JWT"
          },
          "400": {
            "description": "Request inválido"
          },
          "401": {
            "description": "Login inválido"
          }
        }
      }
    },
    "/authentication/user": {
      "get": {
        "description": "Obtiene el objeto User codificado dentro del JWT",
        "tags": [
          "Autenticación"
        ],
        "security": [
          {
            "apiKeyAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Objeto user con los roles y perfiles del usuario"
          },
          "401": {
            "description": "Token de seguridad inválido o ausente"
          }
        }
      }
    },
    "/authentication/refresh": {
      "post": {
        "description": "Método para refrescar el tiempo de expiracion de tokens válidos",
        "tags": [
          "Autenticación"
        ],
        "security": [
          {
            "apiKeyAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Token JWT con nuevo tiempo de expiración"
          },
          "401": {
            "description": "Token de seguridad inválido o ausente"
          }
        }
      }
    },
    "/list/getData": {
      "get": {
        "description": "Método obtener los datos para alimentar la grilla principal",
        "tags": [
          "Lista"
        ],
        "security": [
          {
            "apiKeyAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Token JWT con nuevo tiempo de expiración"
          },
          "401": {
            "description": "Token de seguridad inválido o ausente"
          }
        }
      }
    },
    "/roles": {
      "get": {
        "description": "Obtiene los roles creados en la base de datos",
        "tags": [
          "Roles"
        ],
        "security": [
          {
            "apiKeyAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de roles"

          },
          "401": {
            "description": "Token de seguridad inválido o ausente"
          }
        }
      }
    }
  },
  "definitions": {
    "loginRequest": {
      "in": "body",
      "name": "Login Request",
      "type": "object",
      "required": true,
      "properties": {
        "email": {
          "type": "string",
          "example": "mail@ejemplo.com"
        },
        "password": {
          "type": "string",
          "example": "contraseña"
        }
      }
    },
    "listasResponse": {
      "name": "Lista Response",
      "type": "array",
      "items": {}
    }
  }
}