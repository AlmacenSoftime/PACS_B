{
  "swagger": "2.0",
  "info": {
    "version": "1.2.0",
    "title": "PACS API",
    "description": "API para el sistema PACS de Softime"
  },
  "host": "localhost:8015",
  "basePath": "/",
  "tags": [
    {
      "name": "Authentication",
      "description": "Authentication endpoints"
    },
    {
      "name": "Data",
      "description": "Study data endpoints"
    },
    {
      "name": "Users",
      "description": "User management endpoints"
    },
    {
      "name": "Reports",
      "description": "Report management endpoints"
    }
  ],
  "securityDefinitions": {
    "AuthToken": {
      "type": "apiKey",
      "in": "header",
      "name": "Auth-Token"
    },
    "ApiToken": {
      "type": "apiKey",
      "in": "header",
      "name": "api-token"
    }
  },
  "paths": {
    "/authentication/login": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Login to system",
        "parameters": [
          {
            "in": "body",
            "name": "credentials",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "JWT Token"
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/list/getData": {
      "get": {
        "tags": [
          "Data"
        ],
        "security": [
          {
            "AuthToken": []
          }
        ],
        "summary": "Get list of studies",
        "responses": {
          "200": {
            "description": "List of studies"
          }
        }
      }
    },
    "/informes/{studyId}": {
      "get": {
        "tags": [
          "Reports"
        ],
        "security": [
          {
            "AuthToken": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "studyId",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Report data"
          }
        }
      },
      "post": {
        "tags": [
          "Reports"
        ],
        "security": [
          {
            "AuthToken": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "studyId",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "report",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "content": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Report saved"
          }
        }
      }
    },
    "/admin-users": {
      "get": {
        "tags": [
          "Users"
        ],
        "security": [
          {
            "AuthToken": []
          }
        ],
        "summary": "Get all users",
        "responses": {
          "200": {
            "description": "List of users"
          }
        }
      },
      "post": {
        "tags": [
          "Users"
        ],
        "security": [
          {
            "AuthToken": []
          }
        ],
        "summary": "Create new user",
        "parameters": [
          {
            "in": "body",
            "name": "user",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Usuario"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User created"
          }
        }
      }
    }
  },
  "definitions": {
    "Usuario": {
      "type": "object",
      "properties": {
        "usuario": {
          "type": "string"
        },
        "nombreApellido": {
          "type": "string"
        },
        "eMail": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "Roles": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Rol"
          }
        }
      }
    },
    "Rol": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "Denominacion": {
          "type": "string"
        }
      }
    }
  }
}